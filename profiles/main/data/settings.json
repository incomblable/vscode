{
    "breadcrumbs.enabled": false,
    "debug.console.fontSize": 16,
    "editor.fontFamily": "'Iosevka SS15', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.semanticHighlighting.enabled": false,
    "editor.tokenColorCustomizations": {
        "[Default Dark Modern]": {
            "strings": "#FFFFFF"
        },
        "[Default Light Modern]": {
            "comments": "#646464",
            "keywords": "#000000",
            "numbers": "#003497",
            "strings": "#003497",
            "variables": "#000000"
        }
    },
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "terminal.integrated.fontSize": 16,
    "window.autoDetectColorScheme": true,
    "workbench.iconTheme": "file-icons-colourless",
    "workbench.startupEditor": "none",
    "zenMode.showTabs": "none",
    "custom-ui-style.electron": {
        "frame": false
    },
    "custom-ui-style.stylesheet": {
        // Disable click on single tabs because it pops up the command palette
        ".monaco-workbench .part.editor>.content .editor-group-container>.title>.label-container": {
            "pointer-events": "none"
        }
    },
    "editor.tabCompletion": "on",
    "editor.suggestSelection": "recentlyUsed",
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.activityBar.location": "bottom",
    "workbench.sideBar.location": "right",
    "git.autofetch": true,
    "editor.formatOnSave": true,
    "terminal.integrated.fontLigatures.enabled": true,
    "editor.fontLigatures": true,
    "window.titleBarStyle": "native",
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "window.commandCenter": false,
    "workbench.editor.showTabs": "single",
    "window.customTitleBarVisibility": "never",
}